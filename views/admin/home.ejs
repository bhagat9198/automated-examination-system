<%- include('../includes/admin-nav.ejs') %>

<section class="container">
	<h4>Admin Dashboard</h4>
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item active" aria-current="page">
				Admin Dashboard / Home
			</li>
		</ol>
	</nav>
</section>

<% if(successMessage) { %>
	<br>
	<h4 class="text-center" style="color: green;"><%= successMessage %></h4>
	<br>
<% } %>
<section class="container">
	<div class="row text-white text-center">
		<div class="col-md-3 col-6 bg-warning p-4">
			<h5>Registered Students</h5>
			<div class="row">
				<div class="col-md-6 text-right"><h3><span class="fa fa-graduation-cap"></span></h3></div>
				<div class="col-md-6 text-left"><h4><%= data.totalStudents %></h4></div>
			</div>
		</div>
		<div class="col-md-3 col-6 bg-primary p-4">
			<h5>Registered Faculties</h5>
			<div class="row">
				<div class="col-md-6 text-right"><h3><span class="fa fa-book"></span></h3></div>
				<div class="col-md-6 text-left"><h4><%= data.totalStudents %></h4></div>
			</div>
		</div>
		<div class="col-md-3 col-6 bg-danger p-4">
			<h5>Total University Exams</h5>
			<div class="row">
				<div class="col-md-6 text-right"><h4><span class="fa fa-tv"></span></h4></div>
				<div class="col-md-6 text-left"><h4><%= data.totalUniversityExams %></h4></div>
			</div>
		</div>
		<div class="col-md-3 col-6 bg-info p-4">
