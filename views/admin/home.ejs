			<div class="row">
				<div class="col-md-6 text-right "><h4> <span class="fa fa-pencil-square-o"></span></h4></div>
				<div class="col-md-6 text-left "><h4><%= data.totalExams %></h4></div>
			</div>
		</div>
	</div>
</section>

<br><br>

