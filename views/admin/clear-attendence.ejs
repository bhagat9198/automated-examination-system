<%- include('../includes/admin-nav.ejs') %>

<section class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">
      Admin Dashboard / Clear Attendence Exams</li>
    </ol>
  </nav>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="border" style="padding:10px;">
          <p>Add Attendence</p>
          <form method="POST" action="/admin/clear-attendence" enctype="multipart/form-data">
            <label>Choose Branch:</label>
            <select required class="form-control text-center" name="branch" >
              <option selected="" disabled="">-- Choose Branch --</option>
              <option value="CSE">CSE</option>
              <option value="ISE">ISE</option>
              <option value="ECE">ECE</option>
              <option value="EEE">EEE</option>
            </select>
            <label>Choose Semester:</label>
            <select required class="form-control text-center" name="sem" >
              <option selected="" disabled="">-- Choose Semester --</option>
              <option value="2">2</option>
              <option value="4">4</option>
              <option value="6">6</option>
              <option value="8">8</option>
            </select>
              <br>
              <label>Upload File:</label>
              <input required type="file" name="clearAttendence" class="form-control">
              <br>
              <input type="submit" name="submit" value="Add Now" class="btn btn-primary">
          </form>
        </div> <!-- // form order -->
      </div>
      <div class="col-md-6 border">
        <br>
        <h4>All Attendence</h4>
        <% if(clearAttendence.length > 0) { %>
          <table class="table table-bordered table-striped">
            <tr>
              <th>BRANCH</th>
              <th>SEM</th>
              <th>Action</th>
            </tr>
            <% for(let cAttendence of clearAttendence) { %>
              <tr>
                <td><%= cAttendence.branch %></td>
                <TD><%= cAttendence.sem %></TD>
                <td>
                    <a href="/admin/clear-attendence/<%= cAttendence._id %>">
                      <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                    </a>
                </td>
              </tr>
            <% } %>
          </table>
        <% } else { %>
          <h1>No Exams Registered</h1>
        <% } %>
      </div>
    </div> <!-- // row -->
  </div>
</section>

<br><br><br>

<%- include('../includes/footer.ejs') %>